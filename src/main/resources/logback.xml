<configuration debug="false">

    <!--STDOUT-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss}] [%boldBlue(%level)] [%boldGreen(%logger{0})]: %msg%n</pattern>
        </encoder>
    </appender>

    <!--FILE OUT-->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender" level="INFO">
        <file>./logs/FurryBot.log</file>
        <encoder>
            <pattern>[%d{dd.MM.yyyy HH:mm:ss}] [%level] [%logger{0}] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>./logs/archives/furrybot-%d{dd.MM.yyyy}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!--ASYNC-->
    <appender name="ASYNC-FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
    </appender>

    <!--Root logger-->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-FILE"/>
    </root>
</configuration>
